# === LM Studio Configuration ===
# URL для LM Studio API (по умолчанию работает на localhost:1234)
LM_STUDIO_URL=http://localhost:1234/v1

# Модели для разных задач в LM Studio
# Названия моделей должны соответствовать загруженным в LM Studio
LM_STUDIO_RELEVANCE_MODEL=local-model
LM_STUDIO_CLASSIFICATION_MODEL=local-model
LM_STUDIO_ANALYSIS_MODEL=local-model

# Параметры температуры для разных задач (0.0-1.0)
LM_STUDIO_RELEVANCE_TEMP=0.1
LM_STUDIO_CLASSIFICATION_TEMP=0.1
LM_STUDIO_ANALYSIS_TEMP=0.3

# Таймаут для запросов к LM Studio (в секундах)
LM_STUDIO_TIMEOUT=120

# Максимальное количество повторных попыток
LM_STUDIO_MAX_RETRIES=3

# === Database Configuration ===
# PostgreSQL настройки
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=insightflow
POSTGRES_USER=insightflow
POSTGRES_PASSWORD=your-secure-password

# === RSS Configuration ===
# Путь к файлу конфигурации RSS (предпочтительный метод для большого количества источников)
RSS_CONFIG_FILE=rss_sources.json

# Альтернативный способ указания RSS-источников (для небольшого количества)
# RSS_SOURCES=News:https://example.com/rss/news.xml,Business:https://business-news.com/feed

# === Request Settings ===
# Настройки запросов
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# === Processing Limits ===
# Лимиты для обработки
RELEVANCE_CHECK_LIMIT=50      # Количество постов для проверки релевантности за раз
CLASSIFICATION_LIMIT=10        # Количество постов для классификации за раз

# === General Settings ===
# Общие настройки
DATA_DIRECTORY=data
RUN_ON_STARTUP=true

# === Telegram Configuration ===
# Данные для Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# === Site Information ===
# Информация о сайте (используется в заголовках запросов)
SITE_URL=https://example.com
SITE_NAME=InsightFlow